<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android1:layout_height="match_parent"
    android1:layout_width="match_parent"
    android1:paddingLeft="@dimen/activity_horizontal_margin"
    android1:paddingRight="@dimen/activity_horizontal_margin"
    android1:paddingTop="@dimen/activity_vertical_margin"
    android1:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ExpandableListView
        android1:id="@+id/expandableListView"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android1:divider="@android:color/darker_gray"
        android1:dividerHeight="0.5dp" />

</RelativeLayout>